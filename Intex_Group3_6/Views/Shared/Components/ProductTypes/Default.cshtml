@{
}


@model ProductFilterOptions

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-productType="">Home</a>

    @foreach (var color in Model.PrimaryColors ?? Enumerable.Empty<string>())
    {
        <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Products" asp-route-productType="@color">@color</a>
    }

    @foreach (var category in Model.Categories ?? Enumerable.Empty<string>())
    {
        <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Products" asp-route-productType="@category">@category</a>
    }
</div>

