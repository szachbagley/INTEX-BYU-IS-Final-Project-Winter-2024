@{
}

@model RatedProducts

<div class="recommended-product" style="flex: 0 0 auto; width: 300px; margin-right: 10px;">
    <div class="card">
        <img src="@Model.imgLink" class="card-img-top" alt="@Model.productName">
        <div class="card-body">
            <h5 class="card-title">@Model.productName</h5>
            <p class="card-text">Price: $@Model.price</p>

            <form id=@Model.productId method="post" asp-page="/Cart">
                <input type="hidden" asp-for="productId" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>
        </div>
    </div>
</div>
