@{
    var productList = Model.ToList();
}

@model IQueryable<Product>
<div class="container-fluid mb-20">
    <div class="row"><h1>Products</h1></div>
    <div class="row">
        <div class="col-3">

            filters go here
        </div>
        <div class="col-9">
            @for (int i = 0; i < (Model.Count()); i += 3)
            {
                int j = i + 1;
                int k = i + 2;
                <div class="row">
                    <a asp-controller="Products" asp-action="ProductDetail" asp-route-productName="@productList[i].productName">
                        <div class="col-4 border border-2 p-1 h-100">
                            <img src="@productList[i].imgLink" class="small w-100" />
                            <p>@productList[i].productName</p>
                            <p class="fw-bold">$@productList[i].price</p>
                            <button class="btn btn-primary rounded-3"  ><p>Add To Cart</p></button>
                        </div>
                    </a>
                    @if (j < Model.Count())
                    {
                        <div class="col-4 border border-2 p-1 h-100">
                            <img src="@productList[j].imgLink" class="small w-100" />
                            <p>@productList[j].productName</p>
                            <p class="fw-bold">$@productList[j].price</p>
                            <button class="btn btn-primary btn-sm"><p>Add To Cart</p></button>
                        </div>
                    }
                    
                    @if (k < Model.Count())
                    {
                        <div class="col-4 border border-2 p-1 h-100">
                            <img src="@productList[k].imgLink" class="small w-100" />
                            <p>@productList[k].productName</p>
                            <p class="fw-bold">$@productList[k].price</p>
                            <button class="btn btn-primary rounded-3"><p>Add To Cart</p></button>
                        </div>
                    }
                    
                  
                </div>
            }
            
        </div>
    </div>

</div>
