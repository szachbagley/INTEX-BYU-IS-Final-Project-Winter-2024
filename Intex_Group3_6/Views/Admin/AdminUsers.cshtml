@{
    ViewData["Title"] = "Admin Users";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminUsersViewModel;

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
    <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Role</th>
        <th></th> <!-- Empty header for the Delete button column -->
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.User) {
        <tr>
            <td>@user.userId</td>
            <td>@(user.firstName + " " + user.lastName)</td>
            <td>@user.email</td>
            <td>@user.gender</td>
            <td>@user.age</td>
            <td></td>
            <td>
                <form method="post" asp-controller="Admin" asp-action="AdminUsers" asp-route-id="@user.userId">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </td>
            <td>
                <form method="post" asp-controller="Admin" asp-action="AdminUsers" asp-route-id="@user.userId">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav class="pagination nav-link">
    <div page-model="@Model.PaginationInfo" page-action="AdminUsers" class="pagination"></div>
</nav>
